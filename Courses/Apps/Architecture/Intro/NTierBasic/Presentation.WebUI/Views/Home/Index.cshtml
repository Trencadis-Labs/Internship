@{
  ViewData["Title"] = "Home";
}
@using Models;
@using Models.Paging;
@using Models.Sorting;
@model SortedPagedCollection<Person, PersonSortCriteria>

<div>
  <h2>Person list</h2>

  <div class="container-fluid">
    <div class="row" style="background-color:#dcd7d7;">
      <div class="col-md-4">#ID</div>
      <div class="col-md-4">Full Name</div>
      <div class="col-md-4">Date of Birth</div>
    </div>
    @foreach (var p in Model.Data)
    {
      <div class="row">
        <div class="col-md-4">@p.Id</div>
        <div class="col-md-4">@p.FullName</div>
        <div class="col-md-4">@string.Format("{0:dd-MM-yyyy}", p.DateOfBirth)</div>
      </div>
    }
    <div>
      <ul class="pagination">
        <li>
          <a asp-controller="Home" 
             asp-action="List" 
             asp-route-pageIndex="0">First Pg</a>
        </li>
        @for (int i = 0; i < Model.TotalPagesCount; i++)
        {
          <li>
            <a asp-controller="Home"
               asp-action="List"
               asp-route-pageIndex="@i">@string.Format("{0}", i + 1)</a>
          </li>
        }
        <li>
          <a asp-controller="Home"
             asp-action="List"
             asp-route-pageIndex="@(Model.TotalPagesCount-1)">Last Pg</a>
        </li>
      </ul>
    </div>
  </div>


</div>
